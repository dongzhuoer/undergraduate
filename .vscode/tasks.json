{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": [],
    "presentation": {
        "reveal": "silent",
    },
    "tasks": [
        {
            "label": "build",
            "command": "R --slave -e \"rmarkdown::render('ggcsgb.Rmd', output_format = 'all')\"",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "view html",
            "command": "firefox ggcsgb.html",
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        },
        {
            "label": "view GitHub",
            "command": "firefox https://github.com/dongzhuoer/${workspaceFolderBasename} 2> /dev/null",
        },
    ]
}